@model Actor
@{
    ViewData["Title"] = "Details";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfilePicURL)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ProfilePicURL" alt="@Model.Name"/>
        </dd>
        <dd class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dd>
        <dt class="col-sm-10">
            @Model.Name
        </dt>
        <dd class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bio)
        </dd>
        <dt class="col-sm-10">
            @Model.Bio
        </dt>
    </dl>
    <a asp-action="Index" class="btn btn-info text-white">Back</a>
</div>