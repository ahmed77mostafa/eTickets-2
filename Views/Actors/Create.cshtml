@model Actor
@{
    ViewData["Title"] = "Add Actor";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Name" class="label-control fw-bolder"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ProfilePicURL" class="label-control fw-bolder"></label>
        <input asp-for="ProfilePicURL" class="form-control"/>
        <span asp-validation-for="ProfilePicURL"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Bio" class="label-control fw-bolder"></label>
        <input asp-for="Bio" class="form-control"/>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>
    <br />

    <input type="submit" asp-action="Create" class="btn btn-success"/>
</form>